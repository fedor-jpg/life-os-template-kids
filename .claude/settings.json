{
  "permissions": {
    "allow": [
      "Read(notes/**)",
      "Read(projects/**)",
      "Write(notes/**)",
      "Write(projects/**)",
      "Glob(notes/**)",
      "Glob(projects/**)"
    ],
    "deny": [
      "Bash",
      "WebFetch",
      "WebSearch",
      "mcp__*",
      "Read(.claude/**)",
      "Write(.claude/**)",
      "Read(CLAUDE.md)",
      "Write(CLAUDE.md)",
      "Edit(.claude/**)",
      "Edit(CLAUDE.md)"
    ]
  },
  "hooks": {
    "preMessageSubmit": ".claude/hooks/filter-message.sh"
  }
}
