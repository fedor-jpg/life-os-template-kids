{
  "permissions": {
    "allow": [
      "Read(notes/**)",
      "Read(projects/**)",
      "Write(notes/**)",
      "Write(projects/**)",
      "Glob(notes/**)",
      "Glob(projects/**)",
      "Bash(python3 projects/*)",
      "Bash(python3 -m http.server *)",
      "Bash(node projects/*)",
      "Bash(cd projects && *)"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(rm -rf *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(brew *)",
      "Bash(pip install *)",
      "Bash(npm install *)",
      "WebFetch",
      "WebSearch",
      "mcp__*",
      "Read(.claude/**)",
      "Write(.claude/**)",
      "Read(CLAUDE.md)",
      "Write(CLAUDE.md)",
      "Edit(.claude/**)",
      "Edit(CLAUDE.md)"
    ]
  },
  "hooks": {
    "preMessageSubmit": ".claude/hooks/filter-message.sh"
  }
}
